---
// Simplest possible test
const testUrl = 'https://nodehive-ce.ddev.site';
let status = 'Testing...';

try {
  const response = await fetch(testUrl);
  status = `Connection successful: ${response.status}`;
} catch (error) {
  status = `Connection failed: ${error.message}`;
}
---

<html>
<head>
  <title>Basic Test</title>
</head>
<body>
  <h1>Basic Connection Test</h1>
  <p>{status}</p>
</body>
</html>